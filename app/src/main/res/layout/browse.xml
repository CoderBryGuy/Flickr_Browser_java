<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="3" android:layout_marginBottom="8dp">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/place_holder" android:id="@+id/thumbnail"
            android:scaleType="fitStart" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/title" android:layout_weight="2"
            android:padding="8dp" android:layout_marginLeft="16dp"/>
</LinearLayout>